<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivan.appoc">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home" />
        <activity android:name=".splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feed"
            android:parentActivityName=".Home"/>
        <activity android:name=".mensagens"
            android:parentActivityName=".Home"/>
        <activity android:name=".mapa_homofobia"
            android:parentActivityName=".Home"/>
        <activity android:name=".before_sos"
            android:parentActivityName=".Home"/>
        <activity
            android:name=".configuracoes"
            android:label="@string/title_activity_configuracoes"
            android:parentActivityName=".Home"/>
        <activity android:name=".sobre"
            android:parentActivityName=".Home"/>
        <activity android:name=".denunciar"
            android:parentActivityName=".before_sos"/>
        <activity android:name=".fazer_denuncia"
            android:parentActivityName=".before_sos"></activity>
    </application>

</manifest>